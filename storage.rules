rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // ══ Fotos de negocios: public read, auth write, max 5MB images ══
    match /negocios/{negocioId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // ══ Fotos de cotizaciones CDMX: auth only ══
    match /cotizaciones/{pedidoId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // ══ Tickets: auth read, admin write ══
    match /tickets/{ticketId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024;
    }

    // ══ Logos and branding ══
    match /logos/{allPaths=**} {
      allow read;
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // ══ Deny everything else ══
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
